@{
    ViewData["Title"] = "Reportes de Estudiantes Enfermos";
    Layout = "_Layout";
}

@section Styles {
    <link href="~/css/Table.css" rel="stylesheet" />
}

<h2>@ViewData["Title"]</h2>

<h3>Resumen por Establecimiento</h3>
<table class="table">
    <thead>
        <tr>
            <th>Establecimiento</th>
            <th>Número de Estudiantes Enfermos</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.SummaryByEstablishment != null && ViewBag.SummaryByEstablishment.Count > 0)
        {
            foreach (var item in ViewBag.SummaryByEstablishment)
            {
                <tr>
                    <td>@item.EstablishmentName</td>
                    <td>@item.SickStudentsCount</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center">No hay datos disponibles</td>
            </tr>
        }
    </tbody>
</table>
<form method="post" asp-action="DownloadSummaryPdf">
    <button type="submit" class="btn btn-primary">Descargar PDF del Resumen</button>
</form>

<h3>Reporte Anual por Establecimiento</h3>
<table class="table">
    <thead>
        <tr>
            <th>Año</th>
            <th>Establecimiento</th>
            <th>Número de Estudiantes</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.AnnualReport != null && ViewBag.AnnualReport.Count > 0)
        {
            foreach (var item in ViewBag.AnnualReport)
            {
                <tr>
                    <td>@item.Year</td>
                    <td>@item.EstablishmentName</td>
                    <td>@item.Count</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No hay datos disponibles</td>
            </tr>
        }
    </tbody>
</table>
<form method="post" asp-action="DownloadAnnualPdf">
    <button type="submit" class="btn btn-primary">Descargar PDF Anual</button>
</form>

<h3>Reporte Mensual por Establecimiento</h3>
<table class="table">
    <thead>
        <tr>
            <th>Año</th>
            <th>Mes</th>
            <th>Establecimiento</th>
            <th>Número de Estudiantes</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.MonthlyReport != null && ViewBag.MonthlyReport.Count > 0)
        {
            foreach (var item in ViewBag.MonthlyReport)
            {
                <tr>
                    <td>@item.Year</td>
                    <td>@item.Month.ToString("00")</td> <!-- Formato del mes -->
                    <td>@item.EstablishmentName</td>
                    <td>@item.Count</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No hay datos disponibles</td>
            </tr>
        }
    </tbody>
</table>
<form method="post" asp-action="DownloadMonthlyPdf">
    <button type="submit" class="btn btn-primary">Descargar PDF Mensual</button>
</form>
