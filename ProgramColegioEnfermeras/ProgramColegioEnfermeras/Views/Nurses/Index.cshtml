@model IEnumerable<ProgramColegioEnfermeras.Models.Nurse>

@{
    ViewData["Title"] = "Lista de Enfermeras";
}

<h1>Lista de Enfermeras</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Names) <!-- Nombre -->
            </th>
            <th>
                Apellido <!-- Cambio de FirstName a Apellido -->
            </th>
            <th>
                Segundo Apellido <!-- Cambio de MiddleName a Segundo Apellido -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender) <!-- Género -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthdate) <!-- Fecha de Nacimiento -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ci) <!-- CI -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cellphone) <!-- Teléfono -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email) <!-- Correo Electrónico -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address) <!-- Dirección -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialty) <!-- Especialidad -->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Names)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ci)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cellphone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialty)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a> |
                    <a asp-controller="Userrs" asp-action="Create" asp-route-id="@item.Id">Crear Usuario</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create">Crear Nueva Enfermera</a>
</div>
